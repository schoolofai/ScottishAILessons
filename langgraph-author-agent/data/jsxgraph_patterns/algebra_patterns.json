{
  "patterns": [
    {
      "id": "linear_function_basic",
      "name": "Linear Function - Basic",
      "description": "Standard linear function y = mx + c with labeled intercepts",
      "tags": ["algebra", "function", "linear"],
      "cfe_outcomes": ["MTH 3-15a", "MTH 4-15a"],
      "bounding_box": [-5, 10, 10, -5],
      "diagram": {
        "board": {
          "boundingbox": [-5, 10, 10, -5],
          "axis": true,
          "showNavigation": false,
          "showCopyright": false,
          "keepAspectRatio": true,
          "defaultAxes": {
            "x": {
              "name": "x",
              "withLabel": true,
              "label": {
                "position": "rt",
                "offset": [-15, 15]
              },
              "ticks": {
                "strokeColor": "#6c757d",
                "strokeWidth": 1
              }
            },
            "y": {
              "name": "y",
              "withLabel": true,
              "label": {
                "position": "rt",
                "offset": [15, -10]
              },
              "ticks": {
                "strokeColor": "#6c757d",
                "strokeWidth": 1
              }
            }
          }
        },
        "elements": [
          {
            "type": "functiongraph",
            "args": ["2*x + 3", -5, 5],
            "attributes": {
              "strokeColor": "#0066CC",
              "strokeWidth": 2
            }
          },
          {
            "type": "point",
            "args": [[0, 3]],
            "attributes": {
              "name": "y-intercept",
              "size": 3,
              "fillColor": "#28a745",
              "strokeColor": "#28a745",
              "label": {"offset": [10, 0]}
            }
          },
          {
            "type": "text",
            "args": [3, 9, "y = 2x + 3"],
            "attributes": {
              "fontSize": 16,
              "color": "#0066CC"
            }
          }
        ]
      },
      "customization_points": [
        "Change slope (m) and intercept (c)",
        "Add grid for better visualization",
        "Mark x-intercept as well",
        "Show multiple functions for comparison"
      ]
    },
